{
  "type": "page",
  "body": [
    {
      "type": "container",
      "className": "floating-toolbar-right",
      "body": [
        {
          "type": "wrapper",
          "style": {
            "display": "inline-flex"
          },
          "body": [
            {
              "type": "form",
              "mode": "inline",
              "wrapWithPanel": false,
              "body": [
                {
                  "label": "集群",
                  "type": "select",
                  "multiple": false,
                  "name": "cluster",
                  "id": "cluster",
                  "searchable": true,
                  "source": "/k8s/cluster/option_list",
                  "value": "${cookie:selectedCluster|url_decode}",
                  "onEvent": {
                    "change": {
                      "actions": [
                        {
                          "actionType": "ajax",
                          "api": "post:/k8s/cluster/setDefault/full_name/${event.data.value|url_encode}"
                        },
                        {
                          "actionType": "custom",
                          "script": "window.location.reload();"
                        }
                      ]
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "historyRecord"
    }
  ]
}